<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <com.beardedhen.androidbootstrap.BootstrapLabel
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:text="Generales de la rutina"
       app:bootstrapHeading="h2"
       android:layout_marginBottom="16dp"/>
    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:bootstrapHeading="h3"
        android:id="@+id/txtNombreRutina"
        android:text="Nombre de la rutina"
        android:layout_marginBottom="16dp"/>
    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:bootstrapHeading="h5"
        android:text="DescripciÃ³n de la Rutina"
        android:layout_marginBottom="16dp"/>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/wvGeneralesRutina">
    </WebView>
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:id="@+id/btnVerEjerciciosRutina"
        android:layout_height="wrap_content"
        android:text="Ver Lista de Ejercicios"
        android:drawableStart="@drawable/icon_rutina"
        android:drawablePadding="12sp"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:bootstrapSize="lg"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="8dp"
        />


</LinearLayout>